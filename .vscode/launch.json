{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chat Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-chat-backend",
      "program": "${workspaceFolder}/chat-backend/bin/Debug/net8.0/chat-backend.dll",
      "args": [],
      "cwd": "${workspaceFolder}/chat-backend",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
